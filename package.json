{
  "name": "amex-code-test",
  "version": "1.0.0",
  "description": "Server for React App leveraging GIPHY API",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run start-client\"",
    "start-dev": "NODE_ENV='development' concurrently \"npm run start-server\" \"npm run start-client\"",
    "start-client": "cd client && npm start",
    "start-server": "nodemon server -e html,js,scss --ignore public --ignore client",
    "server": "node server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Jonathan Rosado",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "giphy-js-sdk-core": "^1.0.6",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.7"
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  }
}
